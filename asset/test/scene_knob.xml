  </BSDF>
  
  <BSDF type="MicrofacetBSDF" id="metal3">
    <float name="roughness" value="80.0"/>
  </BSDF>
  
  <BSDF type="Mirror" id="mirror">
    <rgb name="reflectance" value="1.0 1.0 1.0"/>
  </BSDF>

